<style>
  header {
    position: fixed;
    width: 100%;
    height: 50px;
    border-bottom: 1px solid #ececec;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: rgba(255, 255, 255, 0.25);
    box-shadow: 10px 10px 20px -6px rgba(197, 197, 197, 0.2);
    backdrop-filter: blur(6.2px);
    -webkit-backdrop-filter: blur(6.2px);
    z-index: 100;
  }

  .logo {
    width: 100px;
    text-align: center;
    height: auto;
  }

  .logo p {
    font-weight: 500;
  }

  nav ul {
    display: flex;
    justify-content: center;
    gap: 24px;
    list-style: none;
  }

  nav ul li a {
    text-decoration: none;
    color: #282828;
    font-weight: 500;
  }

  footer {
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    background-color: #ffffff;
    border-top: 1px solid #ececec;
  }

  article {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    gap: 8px;
    padding: 0 16px;
  }

  article a {
    width: 40px;
    height: 40px;
    padding: 4px;
    display: grid;
    place-items: center;
    background-color: #282828;
    border-radius: 50%;
  }

  @media (max-width: 370px) {
    .logo {
      display: none;
    }

    nav ul {
      font-size: 14px;
      gap: 16px;
    }
  }
</style>
